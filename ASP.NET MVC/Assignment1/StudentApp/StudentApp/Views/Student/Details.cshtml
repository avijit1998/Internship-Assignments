@model StudentApp.ViewModels.StudentFormViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div>
        <h4>Student Detail</h4>
        <hr />
        
        <div class="form-group">
            @Html.LabelFor(model => model.Students.SerialId,"Serial No")
            @Html.TextBoxFor(model => model.Students.SerialId, new { @readonly = "readonly", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.FirstName, "First Name")
            @Html.TextBoxFor(model => model.Students.FirstName, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.LastName, "Last Name")
            @Html.TextBoxFor(model => model.Students.LastName, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.Email, "Email")
            @Html.TextBoxFor(model => model.Students.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.Gender, "Gender:")
            @Html.DisplayFor(model => model.Students.Gender)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.BirthDate)
            @Html.TextBoxFor(model => model.Students.BirthDate, "{0:d MMMM yyyy}", new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Students.Department.DepartmentName)
            @Html.TextBoxFor(model => model.Students.Department.DepartmentName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    }
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
